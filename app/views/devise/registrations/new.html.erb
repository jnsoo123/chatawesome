<div class="container" style="max-width: 500px;">
  <div class="well">
    <h3 class="text-center">Chat System Sign Up</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Your Email Account' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: :off, class: 'form-control', placeholder: "Your Password #{ '(' + @minimum_password_length.to_s + ' characters minimum)' if @minimum_password_length}" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: :off, class: 'form-control', placeholder: 'Repeat Password' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Sign Up', class: 'btn btn-success', style: 'width: 100%;' %>
      </div>
      <div class="form-group">
        <%= link_to 'Login', new_user_session_path, class: 'btn btn-default', style: 'width: 100%;' %>
      </div>
    <% end %>
  </div>
</div>
