<div class="container" style="max-width: 500px;">
  <div class="well">
    <h3 class="text-center">Chat System Login</h3>
    <%= render partial: 'shared/alert_messages' %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'your@email.com' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: :off, class: 'form-control', placeholder: '******' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Login', class: 'btn btn-success', style: 'width: 100%;' %>
      </div>
      <div class="form-group">
        <%= link_to 'Sign Up', new_registration_path(resource_name), class: 'btn btn-default', style: 'width: 100%;' %>
      </div>
    <% end %>
  </div>
</div>
