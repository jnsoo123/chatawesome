<div class="container" style="max-width: 500px;">
  <div class="well">
    <h3 class="text-center">Chatrooms</h3>
    <div class="row">
      <% @chatrooms.each do |chatroom| %>
        <div class="col-xs-12" style="margin-bottom: 5px;">
          <%= link_to "##{chatroom.topic}", chatroom_path(chatroom), class: 'btn btn-primary btn-lg', style: 'width: 100%;' %>
        </div>
      <% end %>
      <div class="col-xs-12">
        <%= link_to 'Create Channel', new_chatroom_path, class: 'btn btn-success', style: 'width: 100%;' %>
      </div>
    </div>
  </div>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
</div>
