<div class="container" style="max-width: 500px; margin-top: 10px;">
  <div class="well">
    <h3 class="text-center">Chatrooms</h3>
    <div class="row">
      <div id="all_channels">
        <% @chatrooms.each do |chatroom| %>
          <div class="col-xs-12" style="margin-bottom: 5px;">
            <%= link_to "##{chatroom.topic} ( #{chatroom.users.uniq.count} #{icon('user')} )".html_safe, chatroom_path(chatroom), class: 'btn btn-primary btn-primary', style: 'width: 100%;' %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12">
        <%= link_to 'Create Channel', new_chatroom_path, class: 'btn btn-success', style: 'width: 100%;' %>
      </div>
    </div>
  </div>
</div>
