<% if @chatroom.is_private? %>
  <% if session[:chatroom_access] == @chatroom.id %>
    <%= render partial: 'open_chatroom', locals: { chatroom: @chatroom, message: @message } %>
  <% else %>
    <%= render partial: 'close_chatroom' %>
  <% end %>
<% else %>
  <%= render partial: 'open_chatroom', locals: { chatroom: @chatroom, message: @message } %>
<% end %>
