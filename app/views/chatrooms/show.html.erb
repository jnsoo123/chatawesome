<div class="container">
  <h2><%= link_to "#{icon('angle-left')} Back".html_safe, chatrooms_path, class: 'text-muted' %></h2>
  <h2><%= @chatroom.topic %></h2>
  <div class="panel panel-default">
    <% if @chatroom.messages.any? %>
      <div class="panel-body" id="messages">
        <%= render partial: 'messages/message', collection: @chatroom.messages, as: :message %>
      </div>
    <% else %>
      <div class="panel-body hidden" id="messages">
      </div>
    <% end %>
  </div>
  <%= render partial: 'messages/message_form', locals: {message: @message, chatroom: @chatroom} %>
</div>
