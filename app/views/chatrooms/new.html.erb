<h3 class="text-center">New Channel</h3>
<% if flash[:error].present? %>
  <div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p><%= flash[:error] %></p>
  </div>
<% end %>
<%= form_for(@chatroom, url: chatrooms_path) do |f| %>
  <div class="form-group">
    <%= f.text_field :topic, autofocus: true, class: 'form-control', placeholder: 'Channel Name' %>
	  <div class="checkbox">
      <label id="password_field_check_box">
        <%= f.check_box :is_private %> Set Private
      </label>
    </div>
  </div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: :off, class: 'form-control', placeholder: 'Set Password' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Channel', class: 'btn btn-success', style: 'width: 100%;' %>
  </div>
<% end %>
